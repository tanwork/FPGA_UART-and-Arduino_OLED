  u8g.drawStr( 50, 30, a);
  u8g.drawStr( 50, 45, b);
  u8g.drawStr( 50, 60, c);
  
}

void setup(void) {
  
  Serial.begin(9600); // setup serial
  a=af;
  b=bf;
  c=cf;
  af[6]='\0';
  bf[6]='\0';
  cf[6]='\0';
  
  // assign default color value
  if ( u8g.getMode() == U8G_MODE_R3G3B2 ) {
    u8g.setColorIndex(255);     // white
  }
  else if ( u8g.getMode() == U8G_MODE_GRAY2BIT ) {
    u8g.setColorIndex(3);         // max intensity
  }
  else if ( u8g.getMode() == U8G_MODE_BW ) {
    u8g.setColorIndex(1);         // pixel on
  }
  else if ( u8g.getMode() == U8G_MODE_HICOLOR ) {
    u8g.setHiColorByRGB(255,255,255);
  }
  
  u8g.firstPage(); 
  do {
    draw();
  } while( u8g.nextPage() );
  
}

void loop(void) {
//////// for uart testing
//  if(Serial.available()>0){
//    Serial.write(Serial.read());
//  }


  // read the uxrt value
  if(Serial.available()>0){
    rxbuffer[index]=Serial.read();
    if(index==0&&rxbuffer[index]!=0){
      index=0;
    }
    else if(index==4&&rxbuffer[index]!=7){
      index=0;
    }
    else{
      index++;
    }
  }
  
  if(index==5){
    int anum=0,bnum=0,cnum=0;
    anum=rxbuffer[1]+(rxbuffer[2]&15)*256;
    bnum=rxbuffer[3]*16+(rxbuffer[2]&240)/16;
    cnum=bnum-anum>=0?bnum-anum:anum-bnum;
    index=0;
    
    for(int j=5;j>-1;j--){
        cf[j]=cnum%10+'0';
        cnum=cnum/10;
        bf[j]=bnum%10+'0';
        bnum=bnum/10;
        af[j]=anum%10+'0';
        anum=anum/10;  
    }
    
    //做数字显示
    u8g.firstPage(); 
    do {
      drawNum();
    } while(u8g.nextPage() );
  }
  
}
